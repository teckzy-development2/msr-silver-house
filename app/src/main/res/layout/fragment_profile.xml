<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/segoeui_bold"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/theme_color"
                android:textSize="17sp" />

<!--            android:layout_toLeftOf="@id/ivProfile"-->
<!--            <ImageView-->
<!--                android:id="@+id/ivProfile"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentRight="true"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:fontFamily="@font/segoeui"-->
<!--                android:padding="5dp"-->
<!--                android:src="@drawable/person" />-->
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMyAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/lightgrey"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/tvMyAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:drawableStart="@drawable/myaddress"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"
                    android:text="@string/myaddress"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:ignore="RtlCompat" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvWishlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/lightgrey"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/tvWishlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:drawableStart="@drawable/wishlist"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"
                    android:text="@string/wishlist"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:ignore="RtlCompat" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvMyOrders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/lightgrey"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/tvMyOrders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:drawableStart="@drawable/myorders"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"
                    android:text="@string/myorders"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:ignore="RtlCompat" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/lightgrey"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/tvChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:drawableStart="@drawable/changepassword"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"
                    android:text="@string/changepassword"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:ignore="RtlCompat" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSignOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/lightgrey"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/tvSignOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:drawableStart="@drawable/signout"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"
                    android:text="@string/signout"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:ignore="RtlCompat" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
